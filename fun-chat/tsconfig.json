{  
  "exclude": [
    "node_modules",
    "**/dist/**",
  ],
  "compilerOptions": {  
    "target": "es6",  
    "module": "commonjs",  
    "strict": true,  
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",  
    "rootDir": "./src",  
    "baseUrl": "./src" ,
    "moduleResolution": "node"
  },  
  "include": ["src/**/*"] ,
}  